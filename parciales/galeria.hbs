<section class="galeria-container">
  <div class="galeria flex flex-wrap gap-4">
    {{#each images}}
    <div class="card p-4 bg-white rounded-lg shadow-md flex flex-col items-center w-full md:w-1/2 lg:w-1/3">
      <h3 class="text-xl font-bold mb-2 text-center">{{titulo}}</h3>
      <p class="text-gray-600 mb-4 text-center">{{descripcion}}</p>
      <img class="w-full h-auto rounded-lg mb-4" src="{{url}}" alt="{{descripcion}}">
    </div>
    {{/each}}
  </div>
</section>
